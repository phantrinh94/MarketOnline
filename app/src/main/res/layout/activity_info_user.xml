<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@color/red"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.InfoUserActivity">
    <include android:id="@+id/toolbar"
        layout="@layout/toolbar_layout"/>
    <LinearLayout
        android:id="@+id/lnTitle"
        android:layout_below="@id/toolbar"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:layout_margin="2dp"
            android:background="@drawable/bg_color_tel200_conner_16dp"
            android:src="@drawable/ic_user_24"
            android:layout_width="80dp"
            android:layout_height="80dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvTitleName"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="Hi Trinh !"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tvTitlePosition"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="italic"
                android:textSize="14sp"
                android:text="Khách Hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnRegister"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnLogOut"
        android:layout_below="@id/lnTitle"
        android:background="@color/red"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Tài Khoản"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Admin"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mật Khẩu"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="admin"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Số điện thoại"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="0986525252"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Họ Tên"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Admin"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Chức vụ"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvUserPosition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/khach_hang"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="italic" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:text="rank"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvUserLvRank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:paddingEnd="10dp"
            android:text="rank"
            android:textColor="@color/teal_200"
            android:textSize="16sp"
            android:textStyle="italic"
            tools:ignore="RtlSymmetry" />

        <TextView
            android:id="@+id/tvChangePass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="50dp"
            android:text="Thay đổi mật khẩu"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="italic" />

        <View
            android:layout_width="90dp"
            android:layout_height="2dp"
            android:layout_gravity="right"
            android:layout_marginRight="5dp"
            android:background="@color/teal_700" />
    </LinearLayout>

    <Button
        android:id="@+id/btnLogOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_custom_button"
        android:text="Đăng Xuất" />

</RelativeLayout>